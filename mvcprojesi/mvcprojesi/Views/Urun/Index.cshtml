@using mvcprojesi.Models.Entity
@model List<Urunler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>ÜRÜN İD</th>
        <th>ÜRÜN ADI</th>
        <th>MARKASI</th>
        <th>URUN KATEGORİSİ</th>
        <th>FİYAT</th>
        <th>STOK</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>

    </tr>
    <tbody>
        @foreach(var urn in Model)
            {
                <tr>
                    <th>@urn.Urunid</th>
                    <td>@urn.Urunad</td>
                    <td>@urn.Marka</td>
                    <td>@urn.Kategoriler.Kategoriad</td>
                    <td>@urn.Fiyat</td>

                    <td>@urn.Stok</td>

                    <td><a href="/Urun/SIL/@urn.Urunid" class="btn btn-danger">SİL</a></td>
                    <td><a href="/Urun/GUNCELLE/@urn.Urunid" class="btn btn-success">GÜNCELLE</a></td>

                </tr>
            }
    </tbody>
</table>
<a href="/Urun/Urunekle/" class="btn btn-primary">YENİ ÜRÜN EKLE</a>
